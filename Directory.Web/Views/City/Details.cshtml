@using Directory.Web.Models
@model CityViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <div>
        @using (Html.BeginForm("Update", "City", FormMethod.Post))
        {
            @Html.HiddenFor(c => c.Id)

            <div>
                @Html.LabelFor(c => c.Name)
                <div>@Html.TextBoxFor(p => p.Name)</div>
            </div>

            <div>
                @Html.LabelFor(c => c.ProvinceId)
                @Html.DropDownListFor(c=>c.ProvinceId, ViewBag.Provinces as IEnumerable<SelectListItem>, "Select Province")
            </div>

            <div>
                <div>
                    <input type="submit" value="Update" class="btn btn-primary" />
                    @Html.ActionLink("Back", "Index")
                </div>
            </div>
        }
    </div>
</div>


